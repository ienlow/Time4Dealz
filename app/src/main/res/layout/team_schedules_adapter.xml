<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-120dp"
        android:background="@drawable/my_button"
        android:elevation="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="23dp"
        android:layout_height="17dp"
        android:layout_alignStart="@+id/place"
        android:layout_alignTop="@+id/place"
        android:layout_alignBottom="@+id/place"
        android:layout_marginStart="10dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/image_view"
        android:elevation="5dp"
        android:forceHasOverlappingRendering="true" />

    <TextView
        android:id="@+id/team_sport"
        android:layout_width="217dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/place"
        android:layout_alignTop="@+id/place"
        android:layout_alignBottom="@+id/place"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="48dp"
        android:elevation="5dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/team_date"
        android:layout_width="163dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/place"
        android:layout_alignEnd="@+id/place"
        android:layout_alignBottom="@+id/place"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/team_sport"
        android:elevation="5dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/team_location"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/place"
        android:layout_alignTop="@+id/place"
        android:layout_alignEnd="@+id/place"
        android:layout_alignBottom="@+id/place"
        android:layout_marginStart="118dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

</RelativeLayout>