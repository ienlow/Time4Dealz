<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/place2"
        android:layout_width="343dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/my_button"
        android:elevation="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/current_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Current Event"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/place2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/image_view"
        android:elevation="5dp"
        android:forceHasOverlappingRendering="true" />

    <TextView
        android:id="@+id/team_sport2"
        android:layout_width="127dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/place2"
        android:layout_alignBottom="@+id/place2"
        android:layout_marginStart="22dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/team_date2"
        android:elevation="5dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/team_date2"
        android:layout_width="112dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignTop="@+id/place2"
        android:layout_alignEnd="@+id/place2"
        android:layout_alignBottom="@+id/place2"
        android:layout_marginStart="38dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="60dp"
        android:elevation="5dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/team_opponent2"
        android:layout_width="112dp"
        android:layout_height="18dp"
        android:layout_alignStart="@+id/place2"
        android:layout_alignTop="@+id/place2"
        android:layout_alignEnd="@+id/place2"
        android:layout_marginStart="137dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="94dp"
        android:elevation="5dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/team_location2"
        android:layout_width="112dp"
        android:layout_height="18dp"
        android:layout_below="@+id/team_opponent2"
        android:layout_alignStart="@+id/place2"
        android:layout_alignEnd="@+id/place2"
        android:layout_marginStart="137dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="94dp"
        android:elevation="5dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/team_time2"
        android:layout_width="112dp"
        android:layout_height="18dp"
        android:layout_below="@+id/team_location2"
        android:layout_alignStart="@+id/place2"
        android:layout_alignEnd="@+id/place2"
        android:layout_alignBottom="@+id/place2"
        android:layout_marginStart="137dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="15dp"
        android:elevation="5dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

</RelativeLayout>